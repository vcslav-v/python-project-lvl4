upstream {{ app_name }} {
    server {{ app_name }}:5000;
}


server {
    listen 80;
        server_name django-serv;

    location / {
        proxy_pass http://{{ app_name }};
        proxy_set_header Host "{{ host }}";
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;

    }
}
